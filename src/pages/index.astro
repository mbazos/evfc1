---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import CtaBanner from '@components/sections/CtaBanner.astro';
import heroImage from '../assets/images/home/slide-firehouse.jpg';
import apparatusImage from '../assets/images/home/engine-1-3.jpg';

const seoTitle = "Easton Volunteer Fire Company #1 | Serving Since 1921";
const seoDescription = "Protecting Easton, Connecticut since 1921. Professional career and volunteer firefighters providing 24/7 emergency response to fires, hazmat, flooding, and disasters.";

const heroContent = {
    title: 'Easton Volunteer Fire Company #1',
    description: 'Serving our community since 1921. We stand ready to protect and assist in the face of fire, flooding, hazardous materials, or other modern disasters. Staffed 24/7 with professional career firefighters and dedicated volunteers.',
    buttons: [
        {
            text: 'Join Our Team',
            link: '/join',
            target: '_self'
        },
        {
            text: 'Support Us',
            link: '/donate',
            target: '_self'
        }
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.6
}

const featuresSection = {
    eyebrow: "OUR SERVICES",
    title: "Protecting Easton with Excellence",
    description: "For over 90 years, we've been serving our community with dedication and professionalism. Our team of career and volunteer firefighters provides comprehensive emergency services to keep Easton safe.",
    features: featureLists.main.features,
    button: {
        text: "Learn About Us",
        link: "/about",
        variant: "primary" as const
    }
}

const FooterCta = {
    eyebrow: "Support Your Community",
    title: 'Help Us Continue Serving Easton',
    description: 'As a volunteer organization, we rely on community support to maintain our equipment, facilities, and training programs. Your donations help us respond to over 500 emergency calls each year.',
    hideCta: false,
    button: {
        text: 'Make a Donation',
        link: '/donate',
        target: '_self'
    }
}

const apparatusSection = {
    eyebrow: "OUR EQUIPMENT",
    headline: "State-of-the-Art Fire Apparatus",
    description: "We maintain four modern fire engines equipped for structure fires, rescue operations, water supply, and specialized emergencies. Each vehicle is staffed with trained professionals ready to respond at a moment's notice.",
    image: {
        src: apparatusImage,
        alt: "Easton Volunteer Fire Company Fire Apparatus"
    },
    buttons: [
        {
            text: "View Our Apparatus",
            link: "/apparatus",
            variant: "primary" as const
        }
    ]
}

const sideBySideStats = {
    eyebrow: "BY THE NUMBERS",
    title: "A Legacy of Service",
    description: "For over nine decades, Easton Volunteer Fire Company #1 has been protecting our community with dedication and professionalism. These numbers reflect our commitment to Easton.",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "Serving Easton Since 1921",
        description: "We maintain at least two full-time firefighters on duty around the clock, with dedicated volunteers ready to respond when needed. This combination ensures Easton receives professional emergency services 24/7/365. Together, we respond to over 500 calls annually.",
        button: {
            text: "Meet Our Team",
            link: "/members",
            variant: "primary" as const
        }
    }
};

const recruitmentCta = {
    eyebrow: "JOIN US",
    title: "Become Part of Our Team",
    description: "Are you an Easton resident looking to serve your community? We're always looking for dedicated individuals to join our volunteer firefighting team. No experience necessary - we provide all training.",
    button: {
        text: "Learn How to Join",
        link: "/join",
        variant: "primary" as const,
        target: "_self" as const
    }
};
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <SplitPanel content={apparatusSection} imagePosition="right" background="base" padding="base" />
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <CtaBanner content={recruitmentCta} variant="contained" background="light" paddingBottom="base" />
</Layout>