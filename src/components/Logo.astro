---
interface Props {
    variant?: 'header' | 'footer' | 'dark';
}

const { variant = 'header' } = Astro.props;

// Determine the appropriate size based on the variant
const getLogoSize = () => {
    switch (variant) {
        case 'header':
            return 'h-28 md:h-32';
        case 'footer':
            return 'h-10 md:h-12';
        case 'dark':
            return 'h-12 md:h-14';
        default:
            return 'h-12 md:h-14';
    }
};
---

<a href="/" class:list={[
    "logo transition-opacity duration-200 hover:opacity-80 flex items-center",
    variant === 'header' ? 'relative -my-8 md:-my-10 z-10' : ''
]}>
    <img
        src="/logo.png"
        alt="Easton Volunteer Fire Company #1"
        class:list={['w-auto', getLogoSize()]}
    />
</a>
